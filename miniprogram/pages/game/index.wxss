/* pages/game/index.wxss */

@import "../../resource/lib/weui.wxss";

.container {
  height: 650px;
}
.slide-image{
  display:-webkit-inline-flex;
  height: 450rpx;
  width:100%
}
.function_container{
  display:flex;
  flex-wrap: wrap;
  width:100%;
  padding-bottom:15px;
  padding-top:15px;
}
.function_item{
  width:50%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  font-size:15px;
  box-sizing:border-box;
  padding-bottom:15px;
  padding-top:15px;
}
.function_img{
  border-radius: 35rpx;
  width:150px;
  height:150px;
  background-color: white;
}
.function_name{
  margin-top: 9px;
  font-size: 14px;
  display: flex;
  font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
}