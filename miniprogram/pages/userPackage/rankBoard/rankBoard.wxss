/* pages/user/userPackage/pages/rankBoard/rankBoard.wxss */

.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}

.form-cell_desc {
  font-size: small;
  color: lightgray;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: #A7C18C;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.list {
  background: white;
}

.edit {
  color: white;
  background: #A7C18C;
}

.users-list {
  background: white;
  padding: 0 30rpx;
}
.users-list view:nth-child(1) .users-right .users-title view:nth-child(2){
  color: #DC143C;
}
.users-list view:nth-child(2) .users-right .users-title view:nth-child(2){
  color: #FF4500;
}
.users-list view:nth-child(3) .users-right .users-title view:nth-child(2){
  color: #FF8C00;
}
.users {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1px solid #efefef;
}
 
.users image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 3em;
}
 
.users-right {
  width: 70%;
  margin-left: 20rpx;
  padding: 10rpx 0; 
}
 
.users-right .users-title {
  font-size: 35rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
 
.users-right .users-title view:nth-child(2) {
  color: gray;
  font-style: oblique;
}
 
.users-right .users-introduce {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
  letter-spacing: 5rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}
